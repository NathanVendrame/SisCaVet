@using SisCaVet.Models

@model List<Consulta>

@{
    Layout= "~/Views/Shared/Layout.cshtml";
}



<!-- Barra de navegação (Home > Consulta      SisCaVet) -->
<nav class="top-nav green lighten-3">
     <div class="nav-wrapper container">
     
          <!-- Logo Titulo -->
          <a href="/Home/Index" class="brand-logo right">SisCaVet</a>
          
          <div class="row">
               <div class="col s0 m0 l2"></div>
               <div class="col s12 m12 l10">
                    <!-- Botão de Menu que não aparece em tela grande -->
                    <a href="#" data-activates="nav-mobile" class="button-collapse full hide-on-large-only">
                         <i class="material-icons">menu</i>
                    </a>
                    <div>
                         <a href="/Home/Index" class="breadcrumb">Home</a>
                         <a href="#!" class="breadcrumb">Consulta</a>
                    </div>
               </div>
          </div>
     </div>
</nav>

<!-- Pag -->
<div class="row">
     <div class="col s0 m0 l2"></div>
     <div class="col s12 m12 l10">
          
          <div class="row valign-wrapper">
               <div class="col s10">
               
                    
                    <h2 class="green-text text-lighten-3">Consultas</h2>

                    <div class="row valign-wrapper">
                         <div class="col s12 m9 l10">

                              <!-- Botão icone add -->
                              <div class="right-align">
                                   <a class="btn btn-small waves-effect waves-light" href="/Consulta/Create"><i class="material-icons">add</i></a>
                              </div>

                              <!-- Tabela Consulta -->
                              <table class="striped centered">
                                   <thead>
                                        <tr>
                                             <th>Data e hora</th>
                                             <th>Animal</th>
                                             <th>Cliente</th>
                                             <th>Veterinario</th>
                                             <th>Descricao</th>
                                             <th>Status</th>
                                             <th>Procedimento</th>
                                             <th></th>
                                             <th></th>
                                        </tr>
                                   </thead>
                                   @foreach(var consulta in Model)
                                   {
                                        <tr>
                                             <td>                   
                                                  @consulta.Data
                                             </td>                
                                             <td>
                                                  @consulta.Animal.Nome
                                             </td>
                                             <td>                   
                                                  @consulta.Cliente.Nome
                                             </td>                
                                             <td>
                                                  @consulta.Veterinario.Nome
                                             </td>
                                             <td>                   
                                                  @consulta.Descricao
                                             </td>                
                                             <td>
                                                  @consulta.Status
                                             </td>                                                
                                             <td>
                                                  @consulta.ValorTotal
                                             </td>
                                             <td>
                                                  <a class="" href="/Consulta/Visualizar/@consulta.Id"><i class="material-icons">remove_red_eye</i></a>
                                                  
                                             </td>
                                             <td>
                                                  <a class="" href="/Consulta/Update/@consulta.Id"><i class="material-icons">edit</i></a>
                                             </td>  
                                             <td>
                                                  <a class="" href="/Consulta/Delete/@consulta.Id"><i class="material-icons">delete</i></a>
                                             </td>        
                                        </tr>
                                   }          
                              </table>
                              
                         </div>
                         <div class="col hide-on-small-only m2 l1"></div>
                    </div>

               

               
               </div>

               <div class="col s1"></div>
          </div>
     </div>
</div>