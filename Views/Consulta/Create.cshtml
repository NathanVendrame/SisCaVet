@using SisCaVet.Models
@model ConsultaProcedimento

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers 

@{
    Layout= "~/Views/Shared/Layout.cshtml";
}

<script type="text/javascript">
  
  $(document).on('ready', function()
  {
    $("#add").on('click', function()
    {
      $("#teste").append(`
        <div class="row">
          <div id="procedimento" class="row">
            <div class="col s6">
              <p>Procedimento</p>
              <select asp-for="Animal.Id">
                <option>TESTE</option>
              </select> 
            </div>
          </div>
        </div`)
    });
  })

</script>


<!-- Barra de navegação (Home > Consulta > Cadastrar) -->
<nav class="green lighten-3">
    <div class="nav-wrapper container">

        <!-- Logo Titulo -->
        <a href="/Home/Index" class="brand-logo right">SisCaVet</a>
        
        <div class="row">
            <div class="col s0 m0 l2"></div>
            <div class="col s12 m12 l10">
                    
                <!-- Botão de Menu que não aparece em tela grande -->
                <a href="#" data-activates="nav-mobile" class="button-collapse full hide-on-large-only">
                    <i class="material-icons">menu</i>
                </a>
                <div>
                    <a href="/Home/Index" class="breadcrumb">Home</a>
                    <a href="/Consulta/Index" class="breadcrumb">Consulta</a>
                    <a href="#!" class="breadcrumb">Cadastrar</a>
                </div>
            </div>
        </div>
    </div>
</nav>


<!-- Página -->
<div class="row">
    <div class="col s0 m0 l2"></div>
    <div class="col s12 m12 l10">
        
        <div class="row valign-wrapper">
            <div class="col s10">

                <form  action="/Consulta/Create" method="post">
                        <h2 class="green-text text-lighten-3">Cadastrar Consulta</h2>
                        <br/>  

                        <div class="row valign-wrapper">
                            <div class="col s11 m10 l9">
                                <!-- Separar os campos em duas colunas-->   
                                <div class="row">
                                    <div class="col s12 m6">
                                        <!-- Campo Data --> 
                                        <div class="row">
                                            <div class="col s12">
                                                <p>Data</p>
                                                <input type="date" placeholder="Data" asp-for="Consulta.Data" />
                                                <span asp-validation-for="Consulta.Data"></span>
                                            </div>
                                        </div>

                                         <!-- Campo animal -->                                         
                                        <div class="row">
                                            <div class="col s12">
                                                <p>Animal</p>
                                                <select asp-for="Consulta.Animal.Id">
                                                    @foreach(var a in ViewBag.Animal)
                                                    {
                                                        <option value="@a.Id">@a.Nome</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>                                        
                                       

                                    </div>

                                    <div class="col s12 m6">
                                    

                                        <!-- Campo Veterinario --> 
                                        <div class="row">
                                            <div class="col s12">
                                                <p>Veterinário</p>
                                                <select asp-for="Consulta.Veterinario.Id">
                                                    @foreach(var v in ViewBag.Veterinario)
                                                    {
                                                        <option value="@v.Id">@v.Nome</option>
                                                    }
                                                </select>
                                            </div>
                                        </div> 

                                        <!-- Campo Cliente --> 
                                       <div class="row">                           
                                            <div class="col s12">
                                                <p>Descrição</p>
                                                <input placeholder="Descrição" asp-for="Consulta.Descricao"/>
                                                <span asp-validation-for="Consulta.Descricao"></span>
                                            </div>
                                        </div>  
                                         
                                </div>
                                
                                
                                 <!-- Botão Adicionar-->
                                        <div class="row">
                                            <div class="col s5">
                                            <button id="add" class="btn waves-effect waves-light">Adicionar Procedimento</button>
                                            </div>
                                        </div>

                                <div class ="row">
                                    <!-- Campo Procedimento -->                                         
                                        <div id="procedimento" class="row">
                                            <div class="col s6">
                                                <p>Procedimento</p>
                                                <select asp-for="Procedimento.Id">
                                                    @foreach(var a in ViewBag.Procedimento)
                                                    {
                                                        <option value="@a.Id">@a.Descricao</option>
                                                    }
                                                </select>
                                            </div>
                                        </div> 

                                        <div class="row" id="teste">

                                        </div>

                                </div>                              


                                      <!-- Botão Adicionar-->
                                        <div class="row">
                                            <div class="col s5">
                                            <button id="add" class="btn waves-effect waves-light">Salvar</button>
                                            </div>
                                        </div>

                                </div>
                            </div>

                             <div class="col s0 m1 l2"></div>

                             
                               
                        </div>


                          
                </form>
            </div>
        </div>
    </div>
</div>


